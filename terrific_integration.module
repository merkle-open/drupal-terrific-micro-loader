<?php


require 'utils.php';

/**
 * Implements hook_preprocess().
 */
function terrific_integration_preprocess(&$variables, $hook) {
  if ($hook == 'page') {
    $minify = variable_get('preprocess_js', FALSE);
    $cache_key = variable_get('css_js_query_string', '0');

    $asset_path = micro_dump('app.css', $cache_key, $minify );
    drupal_add_css($asset_path);

    $asset_path = micro_dump('app.js', $cache_key, $minify );
    drupal_add_js($asset_path);
  }
}